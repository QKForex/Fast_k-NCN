  <appender name="Cache_kNCNFileAppender" class="org.apache.log4j.FileAppender">
    <param name="file" value="..\logs\log_cache_kncn.txt" />
    <param name="append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
